<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.example.command.paincommand.DrawCanvas
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/mDrawCanvas"
        />

     <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
         android:layout_weight="4"
          android:orientation="vertical"
          >
          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
              android:layout_weight="1"
               android:orientation="horizontal"
               >
               <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/red"
                       android:text="红色"
                        />
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/green"
                  android:text="绿色"
                  />
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/blue"
                  android:text="蓝色"
                  />
          </LinearLayout>
          <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
              android:layout_weight="1"
               android:orientation="horizontal"
               >
               <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ordinary_paint"
                       android:text="普通画笔"
                        />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/circular_paint"
                  android:text="圆形画笔"
                  />
          </LinearLayout>

          <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/undo"
                  android:text="撤销"
                  />

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/redo"
                  android:text="重做"
                  />
          </LinearLayout>

     </LinearLayout>
</LinearLayout>
